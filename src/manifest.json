{
  "manifest_version": 2,
  "name": "web-comic-to-epub",
  "version": "1.0.1",
  "description": "Extension that generates fixed layout epub file from images published on the web.",
  "permissions": ["activeTab", "declarativeContent", "storage", "unlimitedStorage"],
  "icons": {
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "browser_action": {
    "default_title": "",
    "default_icon": {
      "48": "img/icon_48.png",
      "128": "img/icon_128.png"
    },
    "default_popup": "popup.html"
  }
}
